<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar_fragment_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_top_fragment_home"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/txtWhitePrimary"
                app:layout_collapseMode="pin">

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:padding="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/toolbar_logo_home" />
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/txtWhitePrimary"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    tools:ignore="UselessParent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_title_category_main_menu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="@string/txt_category_main_menu"
                            android:textColor="@color/blackTextPrimary"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_subtitle_category_main_menu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignEnd="@id/tv_title_category_main_menu"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/montserrat"
                            android:text="@string/string_all_home"
                            android:textColor="@color/orangePrimary"
                            android:textSize="14sp" />


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="24dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ln_kategori_main_menu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:baselineAligned="false"
                            android:orientation="horizontal"
                            android:weightSum="5">

                            <LinearLayout
                                android:id="@+id/ln_alam_tour_home_menu"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.05"
                                android:gravity="center"
                                android:orientation="vertical"
                                tools:ignore="UseCompoundDrawables">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:contentDescription="@null"
                                    android:src="@drawable/alam_menu" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_light"
                                    android:text="@string/string_alam_wisata_category"
                                    android:textColor="@color/blackTextPrimary" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ln_hiburan_tour_home_menu"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.45"
                                android:gravity="center"
                                android:orientation="vertical"
                                tools:ignore="UseCompoundDrawables">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:contentDescription="@null"
                                    android:src="@drawable/hiburan_menu" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_light"
                                    android:text="@string/string_hiburan_wisata_menu"
                                    android:textColor="@color/blackTextPrimary" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ln_belanja_tour_home_menu"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.45"
                                android:gravity="center"
                                android:orientation="vertical"
                                tools:ignore="UseCompoundDrawables">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:contentDescription="@null"
                                    android:src="@drawable/belanja_menu" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_light"
                                    android:text="@string/string_belanja_wisata_menu"
                                    android:textColor="@color/blackTextPrimary" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ln_desa_tour_home_menu"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.05"
                                android:gravity="center"
                                android:orientation="vertical"
                                tools:ignore="UseCompoundDrawables">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:contentDescription="@null"
                                    android:src="@drawable/desa_menu" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_light"
                                    android:text="@string/string_desa_wisata_menu"
                                    android:textColor="@color/blackTextPrimary" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ln_kategori_public_menu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:baselineAligned="false"
                            android:orientation="horizontal"
                            android:weightSum="5">

                            <LinearLayout
                                android:id="@+id/ln_hotel_public_home"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.05"
                                android:gravity="center"
                                android:orientation="vertical"
                                tools:ignore="UseCompoundDrawables">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:contentDescription="@null"
                                    android:src="@drawable/hotel_menu" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_light"
                                    android:text="@string/string_hotel_menu"
                                    android:textColor="@color/blackTextPrimary" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ln_bandara_public_home"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.45"
                                android:gravity="center"
                                android:orientation="vertical"
                                tools:ignore="UseCompoundDrawables">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:contentDescription="@null"
                                    android:src="@drawable/bandara_menu" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_light"
                                    android:text="@string/string_bandara_menu"
                                    android:textColor="@color/blackTextPrimary" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ln_train_public_home"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.45"
                                android:gravity="center"
                                android:orientation="vertical"
                                tools:ignore="UseCompoundDrawables">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:contentDescription="@null"
                                    android:src="@drawable/stasiun_kereta" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_light"
                                    android:text="@string/string_stasiun_kereta_menu"
                                    android:textAlignment="center"
                                    android:textColor="@color/blackTextPrimary" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ln_bus_public_home"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.05"
                                android:gravity="center"
                                android:orientation="vertical"
                                tools:ignore="UseCompoundDrawables">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:contentDescription="@null"
                                    android:src="@drawable/terminal_menu" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_light"
                                    android:text="@string/string_terminal_menu"
                                    android:textColor="@color/blackTextPrimary" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_title_recommendation_main_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="54dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="@string/string_recommendation"
                        android:textColor="@color/blackTextPrimary"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ln_kategori_main_menu" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_tourism_recommendation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="24dp"
                        android:orientation="horizontal" />

                    <TextView
                        android:id="@+id/tv_title_recommendation_food_main_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="37dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="@string/string_must_try_food"
                        android:textColor="@color/blackTextPrimary"
                        android:textSize="16sp" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_food_recommendation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="24dp"
                        android:orientation="horizontal" />
                </LinearLayout>
            </FrameLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>
</FrameLayout>