<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.mapsactivity.ShoppingCategoryMap">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_shopping_map"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:fitsSystemWindows="true"
        app:title="Peta Wisata Belanja"
        app:titleTextColor="@color/blackTextPrimary" />

    <FrameLayout
        android:id="@+id/frame_layout_shopping_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_shopping_map">

        <fragment
            android:id="@+id/shopping_tourism_map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
</RelativeLayout>

